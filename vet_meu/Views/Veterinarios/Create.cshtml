@model Vets.Models.Veterinarios

@{
    ViewData["Title"] = "Create";
}

<h1>adicionar</h1>

<h4>Veterinário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @*o enctype="multipart/form-data" permite ao browser enviar ficheiros para o servidor*@ 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumCedulaProf" class="control-label"></label>
                <input asp-for="NumCedulaProf" class="form-control" />
                <span asp-validation-for="NumCedulaProf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotografia" class="control-label"></label>
                @*<input asp-for="Fotografia" class="form-control" />*@
                <input type="file" name="fotovet" class="form-control" accept=".jpg,.png" />
                <span asp-validation-for="Fotografia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">regressar à listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
